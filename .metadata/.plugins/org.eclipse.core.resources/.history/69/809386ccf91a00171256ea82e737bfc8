//		String result = dis.readLine();

		int len = dis.read(input);
		byte byteStr = new byte[len];
		
		
		
		String result = new String(input,"UTF-8");
//		result = new String(result.getBytes("UTF-8"),"MS949");
		
//		int resul = result.length();
		
		return result;
	}
}
